# Phase 4 Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# ============================================================================
# API CREDENTIALS
# ============================================================================

# RoboFlow API Key
ROBOFLOW_API_KEY=your_roboflow_api_key_here

# ShotStack API Keys
SHOTSTACK_SANDBOX_API_KEY=your_shotstack_sandbox_key_here
SHOTSTACK_PRODUCTION_API_KEY=your_shotstack_production_key_here
SHOTSTACK_ENV=sandbox  # or "production"

# Abacus AI (for Vision APIs)
ABACUS_API_KEY=your_abacus_api_key_here

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Vision API Configuration
VISION_PRIMARY_PROVIDER=anthropic  # or "openai"
VISION_FALLBACK_PROVIDER=openai    # or "anthropic"
VISION_TIMEOUT=30

# Output Configuration
OUTPUT_DIR=phase4_outputs

# Performance Configuration
PARALLEL_PROCESSING=false
MAX_WORKERS=4

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=phase4_pipeline.log
